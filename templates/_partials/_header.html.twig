            <a href="/product" class="{{ current_path starts with '/product' ? 'active' : '' }}">Boutique</a>
            <a href="/cart" class="{{ current_path == '/cart' ? 'active' : '' }}">Panier</a>
            <a href="/logout">Se d√©connecter</a>
        {% else %}
            <a href="/" class="{{ current_path == '/' ? 'active' : '' }}">Accueil</a>
            <a href="/register" class="{{ current_path == '/register' ? 'active' : '' }}">S'inscrire</a>
            <a href="/login" class="{{ current_path == '/login' ? 'active' : '' }}">Se connecter</a>
        {% endif %}
	</nav>
